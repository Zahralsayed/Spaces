<h1> Edit facility</h1>

<form  method="POST" action="/facility/edit/<%= facility._id  %>?type=<%= facility.type %>">
    <div>
        <label> Name: </label>
        <input type="text" name="name" id="name" class="form-control" value="<%= facility.name %>">
    </div>

    <div>
        <label> Description: </label>
        <input type="text" name="description" id="description" class="form-control" value="<%= facility.description %>">
    </div>

    <div>
        <label> location: </label>
        <input type="text" name="location" id="location" class="form-control" value="<%= facility.location %>">
    </div>

    <div>
        <label> Price: </label>
        <input type="number" name="price" id="price" class="form-control" value="<%= facility.price %>">
    </div>

    
    <div>
        <label> Phone Number: </label>
        <input type="number" name="phoneNumber" id="phoneNumber" class="form-control" value="<%= facility.phoneNumber %>">
    </div>

    <br>

    <button type="submit" class="btn btn-primary">Update Facility</button>
</form>

<button onclick="window.location.href='/facility/index'" class="btn btn-outline-primary" >Cancel</button> <!-- Cancel button to go back -->