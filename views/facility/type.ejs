<h1><%= facilityType.toUpperCase() %>S</h1>

<div id="facility-list">
    <% facilities.forEach(facility => { %>
        <div class="facility-card">
            <h2><%= facility.name %></h2>
            <p><%= facility.description %></p>
            <button onclick="window.location.href='/facility/detail?id=<%= facility._id %>'">View Details</button>
            <% if (user) { %>
                <button onclick="window.location.href='/facility/edit/<%= facility._id %>'">Edit</button>
                <form method="POST" action="/facility/delete/<%= facility._id %>" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this facility?');" style="background-color: red;">Delete</button>
                </form>
            <% } %>
        
        </div>
    <% }); %>
</div>

<button onclick="window.location.href='/'" class="btn btn-primary">Back</button>